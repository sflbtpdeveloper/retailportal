<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
>
    <!-- Main VBox for vertical stacking -->
    <VBox
        id="mainBox"
        alignItems="Stretch"
        justifyContent="Start"
        height="100%"
        width="100%"
    >
        <Carousel
            id="idCars1"
            height="100%"
            loop="true"
            showPageIndicator="false"
        >
            <VBox id="idWelcom">
                <Image
                    src="/images/SFL.png"
                    width="100%"
                    class="carouselImage"
                />
                <Text
                    text="Welcome to our Retail Operations Portal"
                    class="carouselText title"
                />
            </VBox>
        </Carousel>

        <HBox
            alignItems="Center"
            justifyContent="Center"
        >
            <VBox
                class=" contentBox sapUiLargePadding "
                justifyContent="Center"
                alignItems="Center"
                width="100%"
            >
                <Text
                    id="idPara1"
                    text="SFL designs and manufactures fasteners and related products, ensuring quality and customization for various industries (automotive, infrastructure, etc.)."
                    class="paragraphText animate-charcter"
                    textAlign="Center"
                    wrapping="true"
                    maxLines="4"
                    wrappingType="Hyphenated"
                />

                <Text
                    id="idPara2"
                    text=" Rigorous checks and certifications to ensure product durability and adherence to global standards."
                    class="paragraphText animate-charcter"
                    textAlign="Center"
                    wrapping="true"
                    maxLines="4"
                    wrappingType="Hyphenated"
                />

                <VBox
                    id="idPara"
                    class="waviy"
                />
            </VBox>
        </HBox>

        <Carousel
            id="idPortal"
            loop="true"
            showPageIndicator="false"
            pageChanged="onPageChanged"
            height="100%"
            width="100%"
        >
            <Image
                id="fadeImage"
                height="80vh"
                width="100%"
            />
        </Carousel>

