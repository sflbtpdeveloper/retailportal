        <HBox
            alignItems="Center"
            justifyContent="Center"
        >
            <VBox
                class="contentBox sapUiLargePadding"
                justifyContent="Center"
                alignItems="Center"
                width="100%"
            >
                <Text
                    id="idPara3"
                    text="Exploring recyclable packaging and sustainable raw material sourcing."
                    class="paragraphText animate-charcter"
                    textAlign="Center"
                    wrapping="true"
                    maxLines="4"
                    wrappingType="Hyphenated"
                />

                <Text
                    id="idPara4"
                    text="Energy-efficient manufacturing techniques to minimize environmental impact."
                    class="paragraphText animate-charcter"
                    textAlign="Center"
                    wrapping="true"
                    maxLines="4"
                    wrappingType="Hyphenated"
                />
            </VBox>
        </HBox>

        <!-- Footer Section -->
        <Toolbar class="footerToolbar">
            <HBox class="newsTickerBox">
                <Text
                    id="idNewsText"
                    text="Registered Office: SUNDRAM FASTENERS LIMITED,
                          98 - A, VII Floor,
                          Dr. Radhakrishnan Salai,
                          Mylapore, Chennai - 600 004, India.
                          Phone: +91 44 28478500,
                          E-mail: hq@corp.sfl.co.in"
                    class="newsText"
                />
            </HBox>

            <ToolbarSpacer />
            <core:Icon
                src="sap-icon://call"
                size="1rem"
            />
        </Toolbar>
    </VBox>
