<core:FragmentDefinition
    controllerName="zretail_sfl.controller.StkRep"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
>
    <VBox>
        <HBox
            width="100%"
            alignItems="Center"
            justifyContent="SpaceBetween"
        >
            <VBox
                alignItems="Center"
                width="100%"
            >
                <Title
                    text="Stock Report"
                    textAlign="Center"
                    titleStyle="Auto"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop customSubtitle"
                />
            </VBox>
            <HBox width="4rem" />
        </HBox>

        <Toolbar class="customToolbar">
            <SearchField
                width="17.5rem"
                placeholder="Filter by Plant"
                liveChange="onWerks"
            />

            <SearchField
                width="17.5rem"
                placeholder="Filter by Material"
                liveChange="onMatnr"
            />
            <ToolbarSpacer />
            <Button
                text="Download Excel"
                press="onDownloadExcel"
                type="Ghost"
                icon="sap-icon://excel-attachment"
                width="10%"
            />
        </Toolbar>

        <ScrollContainer
            width="100%"
            height="100%"
            horizontal="true"
            vertical="true"
        >
            <Table
                id="__StkRepTable"
                items="{path:'listModel>/'}"
                width="auto"
                growing="true"
                growingThreshold="20"                
                fixedLayout="false"
                class="customTableHeader"
            >
                <columns>
                    <Column>
                        <Label text="Plant" />
                    </Column>
                    <Column>
                        <Label text="Material Number" />
                    </Column>
                    <Column>
                        <Label text="Material Description" />
                    </Column>
                    <Column>
                        <Label text="Quantity" />
                    </Column>
                    <Column>
                        <Label text="Remarks" />
                    </Column>
                    <Column>
                        <Label text="Created Date" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Inactive">
                        <cells>
                            <ObjectIdentifier title="{listModel>Werks}" />
                            <ObjectIdentifier title="{listModel>Matnr}" />
                            <ObjectIdentifier title="{listModel>Maktx}" />
                            <ObjectIdentifier title="{listModel>Fkimg}" />
                            <ObjectIdentifier title="{listModel>Remarks}" />
                            <ObjectIdentifier title="{listModel>Erdat}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
    </VBox>
</core:FragmentDefinition>
