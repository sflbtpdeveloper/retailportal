<mvc:View
    controllerName="zretail_sfl.controller.StkRep"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
>
    <Page
        id="Price"
        showFooter="false"
        showHeader="false"
        showNavButton="false"
    >
        <content>
            <HBox
                width="100%"
                alignItems="Center"
                justifyContent="SpaceBetween"
            >
                <Image
                    src="/image/logo.png"
                    alt="Company Logo"
                    densityAware="false"
                    width="4rem"
                />
                <VBox
                    alignItems="Center"
                    width="100%"
                >
                    <Title
                        text="Sundram Fasteners Limited"
                        textAlign="Center"
                        titleStyle="Auto"
                        class="sapUiTinyMarginBegin sapUiMediumMarginTop customTitle"
                    />
                    <Title
                        text="Stock Report"
                        textAlign="Center"
                        titleStyle="Auto"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop customSubtitle"
                    />
                </VBox>
                <HBox width="4rem" />
            </HBox>

            <Toolbar class="customToolbar">
                <SearchField
                    id="searchFieldWerks"
                    width="17.5rem"
                    placeholder="Search by Plant"
                    liveChange="onWerks"
                />

                <SearchField
                    id="searchFieldMatnr"
                    width="17.5rem"
                    placeholder="Search by Material"
                    liveChange="onMatnr"
                />

                <SearchField
                    id="searchFieldMaktx"
                    width="17.5rem"
                    placeholder="Search by Description"
                    liveChange="onMaktx"
                />

                <ToolbarSpacer />
            </Toolbar>

            <ScrollContainer
                width="100%"
                height="450px"
                horizontal="true"
                vertical="true"
            >
                <Table
                    id="priceTable"
                    items="{path:'listModel>/'}"
                    width="auto"
                    growing="true"
                    growingThreshold="20"                    
                    fixedLayout="false"
                    class="customTableHeader"
                >
                    <columns>
                        <Column>
                            <Label text="Plant" />
                        </Column>
                        <Column>
                            <Label text="Material Number" />
                        </Column>
                        <Column>
                            <Label text="Material Description" />
                        </Column>
                        <Column>
                            <Label text="Quantity" />
                        </Column>
                        <Column>
                            <Label text="Remarks" />
                        </Column>
                        <Column>
                            <Label text="Created Date" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Inactive">
                            <cells>
                                <ObjectIdentifier title="{listModel>Werks}" />
                                <ObjectIdentifier title="{listModel>Matnr}" />
                                <ObjectIdentifier title="{listModel>Maktx}" />
                                <ObjectIdentifier title="{listModel>Fkimg}" />
                                <ObjectIdentifier title="{listModel>Remarks}" />
                                <ObjectIdentifier title="{listModel>Erdat}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
