<core:FragmentDefinition
    controllerName="zretail_sfl.controller.Price"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
>
    <VBox>
        <HBox
            width="100%"
            alignItems="Center"
            justifyContent="SpaceBetween"
        >
            <VBox
                alignItems="Center"
                width="100%"
            >
                <Title
                    text="Price List"
                    textAlign="Center"
                    titleStyle="Auto"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop customSubtitle"
                />
            </VBox>
            <HBox width="4rem" />
        </HBox>

        <Toolbar class="customToolbar">
            <SearchField
                id="sf_Matnr_pr"
                width="17.5rem"
                placeholder="Search by Material"
                liveChange="onMatnr"
            />
            <ToolbarSpacer />
            <Button
                text="Download Excel"
                press="onDownloadExcel"
                type="Ghost"
                icon="sap-icon://excel-attachment"
                width="10%"
            />
        </Toolbar>

        <ScrollContainer
            width="100%"
            height="100%"
            horizontal="true"
            vertical="true"
        >
            <Table
                id="__PriceTable"
                items="{path:'listModel>/'}"
                width="auto"
                growing="true"
                growingThreshold="20"
                fixedLayout="false"
                class="customTableHeader"
            >
                <columns>
                    <Column>
                        <Label text="Material Number" />
                    </Column>
                    <Column>
                        <Label text="Price" />
                    </Column>
                    <Column>
                        <Label text="Pricing Unit" />
                    </Column>
                    <Column>
                        <Label text="UoM" />
                    </Column>
                    <Column>
                        <Label text="Currency" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Inactive">
                        <cells>
                            <ObjectIdentifier title="{listModel>Matnr}" />
                            <ObjectIdentifier title="{listModel>Kbetr}" />
                            <ObjectIdentifier title="{listModel>Kpein}" />
                            <ObjectIdentifier title="{listModel>Kmein}" />
                            <ObjectIdentifier title="{listModel>Konwa}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
        <!-- </content>
    </Page> -->
    </VBox>
</core:FragmentDefinition>
