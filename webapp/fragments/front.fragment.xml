<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
>
    <!-- Main VBox for vertical stacking -->
    <VBox
        id="mainBox"
        alignItems="Stretch"
        justifyContent="Start"
        height="100%"
        width="100%"
    >

    <Carousel
                id="idCars1"
                height="250px"
                loop="true"
                showPageIndicator="false"
            >
                <VBox id="idWelcom1">
                    <Image
                        src="/images/banner_03.jpg"
                        width="100%"
                        class="carouselImage"
                    />
                    <!-- <VBox id="idWelcom" class="title waviy"/>   -->
                    <Text
                        text="Welcome to Retail Operations Portal"
                        class="carouselText title"
                    />
                </VBox>
            </Carousel>
       
        <HBox
            alignItems="Center"
            justifyContent="Center"
        >
            <VBox
                class=" contentBox sapUiLargePadding "
                justifyContent="Center"
                alignItems="Center"
                width="100%"
            >
                <Text
                    id="idPara1"
                    text="Started in 1966, Sundram Fasteners Limited has grown into a global leader, manufacturing critical, high precision components for the automotive, infrastructure, windmill and aviation sectors."
                    class="paragraphText animate-charcter"
                    textAlign="Center"
                    wrapping="true"
                    maxLines="4"
                    wrappingType="Hyphenated"
                />
                <VBox
                    id="idPara"
                    class="waviy"
                />
            </VBox>
        </HBox>

        <Image
            src="/images/banner-01.jpg"
            width="100%"
            class="sapUiSmallMargin sapUiLargePadding zoomOutImage"
        />

        <VBox
            class=" contentBox sapUiLargePadding "
            justifyContent="Center"
            alignItems="Center"
            width="100%"
        >
            <Text
                id="idPara2"
                text=" Recognition does not come easy. It comes with absolute adherence to stringent standards that are never compromised."
                class="paragraphTextOrg"
                textAlign="Center"
                wrapping="true"
                maxLines="4"
                wrappingType="Hyphenated"
            />

            <Text
                id="idPara3"
                text=" Be it in the domestic or global markets, we have been lauded for consistently delivering products and services that 
                             delight our customers,vendors, the OEM community and the aftermarket."
                class="paragraphText"
                textAlign="Center"
                wrapping="true"
                maxLines="4"
                wrappingType="Hyphenated"
            />
        </VBox>

        <Carousel
            id="idPortal"
            loop="true"
            showPageIndicator="false"
            pageChanged="onPageChanged"
            height="100%"
            width="100%"
        >
            <Image
                id="fadeImage"
                height="80vh"
                width="100%"
            />
        </Carousel>

        <HBox
            alignItems="Center"
            justifyContent="Center"
        >
            <VBox
                class=" contentBox sapUiLargePadding "
                justifyContent="Center"
                alignItems="Center"
                width="100%"
            >
                <Text />
                <Text
                    id="idPara5"
                    text=" Our varied range of productions encompasses fasteners, power train components, sintered metal products, iron powder, cold extruded parts, radiator caps, water pumps, oil pumps and wind energy components."
                    class="paragraphText"
                    textAlign="Center"
                    wrapping="true"
                    maxLines="4"
                    wrappingType="Hyphenated"
                />
                <Text />
            </VBox>
        </HBox>


        <Carousel
            id="idPortal2"
            loop="true"
            showPageIndicator="false"
            pageChanged="onPageChanged"
            height="100%"
            width="100%"
        >
            <Image
                id="fadeImage2"
                height="80vh"
                width="100%"
            />
        </Carousel>

        <VBox
            class=" contentBox sapUiLargePadding "
            justifyContent="Center"
            alignItems="Center"
            width="100%"
        >
            <Text
                id="idParagraph3"
                text=" At Sundram Fastners,We believe in giving back to Society."
                class="paragraphTextOrg"
                textAlign="Center"
                wrapping="true"
                maxLines="4"
                wrappingType="Hyphenated"
            />

            <Text
                id="idParagraph4"
                text="Childrens Education is a paramount Importance to Sundram Fastners.We have provided scholarships for our employess children while creating an ideal learning platform for lots of other children within the community."
                class="paragraphText"
                textAlign="Center"
                wrapping="true"
                maxLines="4"
                wrappingType="Hyphenated"
            />
        </VBox>

        <!-- Footer Section -->
        <Toolbar class="footerToolbar">
            <HBox class="newsTickerBox">
                <Text
                    id="idNewsText"
                    text="Registered Office: SUNDRAM FASTENERS LIMITED,
                          98 - A, VII Floor,
                          Dr. Radhakrishnan Salai,
                          Mylapore, Chennai - 600 004, India.
                          Phone: +91 44 28478500,
                          E-mail: hq@corp.sfl.co.in"
                    class="newsText"
                />
            </HBox>

            <ToolbarSpacer />
            <core:Icon
                src="sap-icon://call"
                size="1rem"
            />
        </Toolbar>
    </VBox>
</core:FragmentDefinition>
