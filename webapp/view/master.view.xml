<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    controllerName="zretail_sfl.controller.master"
>
    <Page
        id="_IDGenPage"
        showHeader="false"
    >
        <headerContent>
            <!-- <Button id="_IDGenButton" icon="sap-icon://action" press="onHome"/> -->
        </headerContent>
        <content>
            <VBox id="_IDGenVBox1">
                <HBox
                    id="_IDGenHBox"
                    justifyContent="SpaceBetween"
                    alignItems="Center"
                    width="100%"
                >
                    <Image
                        id="_IDGenImage1"
                        src="/images/sfllogoonly.png"
                        alt="Company Logo"
                        densityAware="false"
                        class="companyLogo"
                        width="4rem"
                        height="5rem"
                    />
                    <VBox
                        id="_IDGenVBox2"
                        alignItems="Center"
                        width="100%"
                    >
                        <Title
                            id="_IDGenTitle"
                            text="SUNDRAM FASTENERS LIMITED"
                            textAlign="Begin"
                            titleStyle="Auto"
                            class="zoomOutImage companyHeading "
                        />

                        <Title
                            id="_IDGenTitle1"
                            text="Retail Operations"
                            width="auto"
                            textAlign="Center"
                            titleStyle="Auto"
                            class="scmHeading  zoomOutImage"
                        />
                    </VBox>
                </HBox>
            </VBox>

            <!--  <SearchField id="idSearch" search="onSearch" liveChange="onSearch"></SearchField>  -->
            <List
                id="_IDGenList"
                itemPress=".onListItemPress"
            >
                <items>
                    <StandardListItem
                        id="_IDGenStandardListItem1"
                        title="Orders"
                        type="Active"
                        press="onOrder"
                    />
                    <StandardListItem
                        id="_IDGenStandardListItem2"
                        title="GRN"
                        type="Active"
                        press="onGRN"
                    />
                    <StandardListItem
                        id="_IDGenStandardListItem3"
                        title="Products/Pricing"
                        type="Active"
                        press="onPP"
                    />
                    <StandardListItem
                        id="_IDGenStandardListItem4"
                        title="Dashboard"
                        type="Active"
                        press="onDash"
                    />
                </items>
            </List>
        </content>
    </Page>
</mvc:View>
